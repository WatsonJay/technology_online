<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 这里填写对应的Dao文件所在的路径 -->
<mapper namespace="com.learning.dao.UserDao">
    <!-- 填写数据库里实例User对应的表的表名 -->
    <!-- 这里是作为一个变量使用 -->
    <sql id="table">user</sql>

    <!-- id属性填写Dao文件里的函数名称 xxType是参数或是结果的类型根据情况填写 -->
    <!-- 查询所有   -->
    <select id="getAll" resultType="com.learning.model.User">
        SELECT
        *
        FROM
        <include refid="table" />
    </select>

    <!-- 查询所有   -->
    <select id="checkUser" resultType="com.learning.model.User">
        SELECT
        *
        FROM
        <include refid="table" />
        WHERE
        user_name = #{userName}
        AND
        password = #{password}
        AND
        user_status = 1
    </select>

    <!-- 根据用户名查询 -->
    <select id="getUserByName" resultType="java.lang.Integer">
        SELECT
        count(*)
        FROM
        <include refid="table"/>
        WHERE
        user_name = #{userName}
    </select>

    <!-- 根据用户昵称查询 -->
    <select id="getUserByNickName" resultType="java.lang.Integer">
        SELECT
        count(*)
        FROM
        <include refid="table"/>
        WHERE
        user_nick_name = #{userNickName}
    </select>

    <!-- 增 -->
    <insert id="newUser" parameterType="com.learning.model.User">
        INSERT INTO
        <include refid="table"/>
        (user_name,user_nick_name,password,user_mail,user_phone,user_power,user_status)
        VALUES
        (#{userName},#{userNickName},#{password},#{userMail},#{userPhone},#{userPower},#{userStatus})
    </insert>
</mapper>